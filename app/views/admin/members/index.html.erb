<div class="container mt-5">
  <div class="row mb-4">
    <h1>会員一覧</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td>
                <%= member.id %>
              </td>
              <td>
                <%= link_to admin_member_path(member) do %>
                  <%= member.full_name %>
                <% end %>
              </td>
              <td>
                <%= member.email %>
              </td>
              <td>
                <%= member.withdrawal_status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>