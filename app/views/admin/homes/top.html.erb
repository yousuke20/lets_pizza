<div class="container my-5">
  <div class="row mb-4">
    <h1>注文履歴一覧</h1>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文枚数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= order.created_at.to_s(:datetime_jp) %>
                <% end %>
              </td>
              <td>
                <%= order.member.full_name %>
              </td>
              <td>
                <%= order.order_pizzas.sum(:number_of_sheets) %> 枚
              </td>
              <td>
                <%= order.order_status %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>