<div class="container my-5">
  <div class="row mb-4">
    <h1 class="col">ピザ一覧</h1>
    <%= link_to new_admin_pizza_path do %>
      <span class="fas fa-pizza-slice fa-3x"></span>
      新規ピザ登録はこちらから
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>ピザID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>サイズ</th>
            <th>販売ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @pizzas.each do |pizza| %>
            <tr>
              <td>
                <%= pizza.id %>
              </td>
              <td>
                <%= link_to admin_pizza_path(pizza) do %>
                  <%= pizza.pizza_name %>
                <% end %>
              </td>
              <td>
                <%= (pizza.price).to_s(:delimited) %>円
              </td>
              <td>
                <%= pizza.pizza_size %>
              </td>
              <td>
                <%= pizza.sales_status %>
              </td>
              <td>
                <%= link_to "削除", admin_pizza_path(pizza), method: :delete, class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @pizzas %>
      </div>
    </div>
  </div>
</div>