<div class="container my-5">
  <div class="row mb-4">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="col mb-4">
    <div class="row my-2">
      <label class="col-sm-3">購入者</label>
      <div class="col-sm-9">
        <%= link_to admin_member_path(@order.member_id) do %>
          <%= @order.member.full_name %>
        <% end %>
      </div>
    </div>
    <div class="row my-2">
      <label class="col-sm-3">注文日</label>
      <div class="col-sm-9">
        <%= @order.created_at.to_s(:datetime_jp) %>
      </div>
    </div>
    <div class="row my-2">
      <label class="col-sm-3">配送先</label>
      <div class="col-sm-9">
        <%= @order.delivery_postal_code %><br>
        <%= @order.delivery_address %><br>
        <%= @order.delivery_name %>
      </div>
    </div>
    <div class="row my-2">
      <label class="col-sm-3">支払方法</label>
      <div class="col-sm-9">
        <%= @order.payment_method %>
      </div>
    </div>
    <div class="row my-2">
      <label class="col-sm-3">注文ステータス</label>
      <div class="col-sm-9">
        <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
          <%= f.select :order_status, Order.order_statuses.keys, class: "form-control" %>
          <%= f.submit "更新", class: "btn btn-outline-success" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-8 mx-auto">
      <table class="table table-hover table-border">
        <thead class="thead-dark">
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>枚数</td>
            <td>小計</td>
            <td>調理ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @order_pizzas.each do |order_pizza| %>
            <tr>
              <td>
                <%= order_pizza.pizza.pizza_name %>
              </td>
              <td>
                <%= (order_pizza.price * 1.1).floor.to_s(:delimited) %>
              </td>
              <td>
                <%= order_pizza.number_of_sheets %>
              </td>
              <td>
                <%= ((order_pizza.price * 1.1) * (order_pizza.number_of_sheets)).floor.to_s(:delimited) %>
              </td>
              <td>
                <%= form_with model: order_pizza, url: admin_order_pizza_path(order_pizza), method: :patch, local: true do |f| %>
                  <%= f.select :cooking_status, OrderPizza.cooking_statuses.keys, class: "form-control" %>
                  <%= f.submit "更新", class: "btn btn-outline-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-sm-4 mx-auto">
      <table class="table table-borderless">
        <tbody>
          <tr class="table-warning">
            <td>
              <strong>請求金額合計<strong>
            </td>
            <td>
              <strong>
                <%= (@order.billing_amount).floor.to_s(:delimited) %> 円
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>