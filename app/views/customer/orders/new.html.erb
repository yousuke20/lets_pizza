<div class="bg-light">
  <div class="container mx-auto pt-5">
    <div class="col">
      <h1 class="text-center">
        <i class="fas fa-pencil-alt fa-2x"></i>
        <strong>注文情報入力</strong>
      </h1>
    </div>
    <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
    <div class="col my-5 mx-auto">
      <h2 class="col text-center mb-4"><strong>支払方法</strong></h2>
      <div class="row d-flex justify-content-center">
        <div class="form-check">
          <%= f.radio_button :payment_method, :現金, class: "form-check-input" %>
          <label class="form-check-label">現金</label>
        </div>
        <div class="form-check mx-4">
          <%= f.radio_button :payment_method, :クレジットカード, class: "form-check-input" %>
          <label class="form-check-label">クレジットカード</label>
        </div>
        <div class="form-check">
          <%= f.radio_button :payment_method, :銀行振込, class: "form-check-input" %>
          <label class="form-check-label">銀行振込</label>
        </div>
      </div>
    </div>
    <div class="col my-5">
      <h2 class="col text-center mb-4"><strong>お届け先</strong></h2>
      <div class="form-check my-3">
        <%= f.radio_button :add, "new_address", class: "form-check-input" %>
        <label class="form-check-label">配達先を指定する</label>
        <div class="d-flex justify-content-center">
          <div class="col-sm-6 mx-auto">
            <div class="card">
              <div class="card-body">
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-text">〒</span>
                    <%= f.text_field :delivery_postal_code, class: "form-control", placeholder: "郵便番号" %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marked-alt"></i></span>
                    <%= f.text_field :delivery_address, class: "form-control", placeholder: "住所" %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-signature"></i></span>
                    <%= f.text_field :delivery_name, class: "form-control", placeholder: "宛名" %>
                  </div>
                </div>
              </div>
            </div>
          </div> 
        </div>
      </div>
      <div class="form-check my-3">
        <%= f.radio_button :add, "my_address", class: "form-check-input" %>
        <label class="form-check-label">既に登録した配達先から選択</label>
        <div class="d-flex justify-content-center">
          〒 <%= select_tag :delivery, options_for_select(Delivery.all.map{|add| [add.postal_code + add.address + add.name]}), {include_blank: '配達先を選択'} %>
　        </div>
      </div>
    </div>
    <div class="row py-4 d-flex justify-content-center">
      <%= f.submit '注文情報確認へ進む', class: "btn btn-lg btn-primary" %>
    </div>
    <% end %>
  </div>
</div>