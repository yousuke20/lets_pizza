<div class="container mt-5">
  <div class="col-sm-6 mx-auto ">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-center mb-4 mt-1">新規会員登録</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <%= f.text_field :full_name, class: "form-control", placeholder: "名前" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-signature"></i></span>
              <%= f.text_field :full_name_kana, class: "form-control", placeholder: "フリガナ" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード (6文字以上)" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード 確認用" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit "新規会員登録", class: "btn btn-outline-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




